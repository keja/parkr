<link rel="stylesheet" href="interface/css/login.css">
<div id="transparent-black"></div>
<div class="logo"><img src="interface/graphics/parkr_logo.svg" alt="logo" id="logo"></div>

<!--Login & Register page-->
<div id="login-regi-page">
<div id="login"><a href="##">Log in</a></div>
<div id="register"><a href="##">Register</a></div>
</div>


<!--Login page-->
<div id="login-page" style="display: block">
<div class="input-group st30">
    <i class="fa fa-user"></i>
    <input id="form_login_username" placeholder="Username"/>
</div>
<div class="input-group st30">
    <i class="fa fa-unlock-alt"></i>
    <input type="password" id="form_login_password" placeholder="Password"/>
</div>
<button class="st30 primary" id="login_btn">Login</button>

<div class="back"><a href="##"><i class="fa fa-long-arrow-left"></i> Back</a></div>
</div>

<!--Register page-->
<div id="register-page" style="display:none;">
<div class="input-group st30">
    <i class="fa fa-user"></i>
    <input id="form_create_username" placeholder="Username"/>
</div>
<div class="input-group st30">
    <i class="fa fa-unlock-alt"></i>
    <input type="password" id="form_create_password" placeholder="Password"/>
</div>
<div class="input-group st30">
    <i class="fa fa-unlock-alt"></i>
    <input type="password" id="form_create_password_again" placeholder="Repeat password"/>
</div>
<button class="st30 primary" id="create_account">Register</button>

<div class="back"><a href="##"><i class="fa fa-long-arrow-left"></i> Back</a></div>
</div>  

<!--License & Credit page-->
<div id="license-credit-page">
    <div id="info-text">
    <p>Please add your car's license<br>
    plate number and your credit card<br>
    number to continue.</p>
    </div>
<div class="input-group st30">
    <i class="fa fa-car"></i>
    <input name="" placeholder="License plate"/>
</div>
<div class="input-group st30">
    <i class="fa fa-credit-card"></i>
    <input name="" placeholder="Credit card number"/>
</div>
        
<div class="login-regi-button"><a href="##">Continue</a></div>>
<div class="back"><a href="##"><i class="fa fa-long-arrow-left"></i> Back</a></div>
</div>

